import React, { useState } from 'react';
import { IonContent, IonFooter, IonHeader, IonTitle, IonToolbar, IonButton, IonIcon } from '@ionic/react';
import { Link } from 'react-router-dom';
import { chevronForwardCircleOutline, chevronBackCircleOutline } from 'ionicons/icons';
import './PlanetPage.css';

const imageData = [
  { url: 'https://openseauserdata.com/files/6ae921fc86fee3c6592f5f217209083d.png', link: '/mercury-page' },
  { url: 'https://i.seadn.io/gae/wCTL3tECeacHsQRgv8X-yx1L1wZXl76pPcKPgweRi-HXKqj_mu__QMKq_mQ7mQBYETFtL6fSXjVnPmCQ7oAB8vf4S9Fi0hhUcrBL9A?auto=format&dpr=1&w=384', link: '/venus-page' },
  { url: 'https://i.seadn.io/gae/Ou8NsG0vKnbK01KMTGW0ZlDAuNkDQUwKP0aNfsunNdZCML2ZNRrpjjoL28x7VC17EXI0WmRECk2CDpOc4gQGvHSK616tEgbgtBFocA?auto=format&dpr=1&w=1000', link: '/earth-page' },
  { url: 'https://openseauserdata.com/files/fe26e80b6d3670342a9816edfe2390fc.png', link: '/mars' },
  { url: 'https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/b0b7f079-2f3a-4895-8dda-4f6bdb7a6659/db8siqg-5bf31fee-df61-41c2-8a40-3581c95fb16f.png', link: '/jupiter' },
  { url: 'https://i.seadn.io/gae/Y8p-LrKZgkcJwdkW9tzxb8T2PVbfCITi-x-25WLAntUsS_UKzrmO8jxnn6u-n2k9UyN2-ukyp-8t6H92-8vk_XK8wzaqh9UBWXStJQ?auto=format&dpr=1&w=384', link: '/saturn' },
  { url: 'https://static.vecteezy.com/system/resources/thumbnails/048/106/065/small_2x/blue-planet-pixel-art-png.png', link: '/uranus' },
  { url: 'https://i.seadn.io/gae/2bBWp5GeqrTPuhMz9BrtLHjJ-_eh-HTASyKZ35oUcSrUY7sXrUGRvq47rbt0z7jUREm0nmGYvfYMqgZtbLN-IKPJlU5Gx6P1Bv1oIQ?auto=format&dpr=1&w=1000', link: '/neptune' },
];

function PlanetPage() {
  const [currentIndex, setCurrentIndex] = useState(0);

  const handleNext = () => {
    setCurrentIndex((prevIndex) => (prevIndex + 1) % imageData.length);
  };

  const handlePrevious = () => {
    setCurrentIndex((prevIndex) => (prevIndex - 1 + imageData.length) % imageData.length);
  };

  return (
    <>
      <IonContent className="content">
        <div className="planet-page">
          <p className="tap-info-text">TAP THE PLANET FOR MORE INFO</p>
          <Link to={imageData[currentIndex].link} className="container">
            <img
              src={imageData[currentIndex].url}
              alt="Planet"
              className={`container-image rotating-planet`} // Add the rotating animation to the current image
            />
          </Link>
          <div className="button-group">
            <IonButton onClick={handlePrevious} className="icon-button">
              <IonIcon icon={chevronBackCircleOutline} />
            </IonButton>
            <IonButton onClick={handleNext} className="icon-button">
              <IonIcon icon={chevronForwardCircleOutline} />
            </IonButton>
          </div>
        </div>
      </IonContent>

      <IonHeader>
        <IonToolbar>
          <IonTitle>Planet Page</IonTitle>
        </IonToolbar>
      </IonHeader>

      <IonFooter>
        <IonToolbar>
          <IonTitle>Footer</IonTitle>
        </IonToolbar>
      </IonFooter>
    </>
  );
}

export default PlanetPage;
